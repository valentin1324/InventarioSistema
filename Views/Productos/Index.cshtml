@model IEnumerable<Producto>
@{
    Layout = "_Layout";
}

<h2>Productos</h2>
<a href="@Url.Action("Create")">Crear Nuevo Producto</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Fecha Vencimiento</th>
            <th>Ubicación</th>
            <th>Costo</th>
            <th>Precio Venta</th>
            <th>Stock</th>
            <th>Proveedor</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Codigo</td>
                <td>@producto.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                <td>@producto.Ubicacion</td>
                <td>@producto.Costo.ToString("C")</td>
                <td>@producto.PrecioVenta.ToString("C")</td>
                <td>@producto.Stock</td>
                <td>@producto.Proveedor</td>
                <td>@producto.Categoria</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = producto.ProductoId })">Editar</a> |
                    <a href="@Url.Action("Details", new { id = producto.ProductoId })">Detalles</a> |
                    <a href="@Url.Action("Delete", new { id = producto.ProductoId })">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
