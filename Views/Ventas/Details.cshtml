@model Venta

<h2>Detalles de Venta</h2>
<div>
    <h4>Venta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fecha Venta</dt>
        <dd class="col-sm-10">@Model.FechaVenta.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.Producto.Nombre</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>

        <dt class="col-sm-2">Precio Total</dt>
        <dd class="col-sm-10">@Model.PrecioTotal.ToString("C")</dd>

        <dt class="col-sm-2">Vendedor</dt>
        <dd class="col-sm-10">@Model.Vendedor.Nombre</dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Index")">Volver a la lista</a>
</div>
